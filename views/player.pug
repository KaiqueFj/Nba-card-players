extends base 

block append head
  link(rel="stylesheet" href='/css/playerPage.styles.css')


mixin overviewBox(label, text,icon)
  .overview-box__detail
    svg.overview-box__icon
      use(src=`/images/players/${player.photo}`)
    span.overview-box__label= label
    span.overview-box__text= text



block content 
  section.section-header
    .header__hero
      .header__hero-overlay &nbsp;
      img.header__hero-img(src=`/images/players/${player.photo}`, alt=`${player.name}`)

    .heading-box
      h1.heading-primary
        span= player.name
      .heading-box__group
        .heading-box__detail
          svg.heading-box__icon
            use(xlink:href='/img/icons.svg#icon-clock')
          span.heading-box__text=`${player.teams} player`
        .heading-box__detail
          svg.heading-box__icon
            use(xlink:href='/img/icons.svg#icon-map-pin')
          span.heading-box__text= player.name

  section.section-description
    .overview-box
      div
        .overview-box__group
          h2.heading-secondary.ma-bt-lg Quick facts

          +overviewBox('Name', player.name, 'calendar')
          +overviewBox('Played for', player.teams, 'trending-up')
          +overviewBox('Rings',`${player.rings}`, 'user')
          +overviewBox('Points', `${player.points}`, 'star')

    .description-box
      h2.heading-secondary.ma-bt-lg= `About the ${player.name} carrer`
      - const paragraphs = player.description.split('\n')
      each p in paragraphs 
        p.description__text= p


  